<html>
  <head>
    <title>와요기</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link rel="stylesheet" href="posts.scss">
  </head>

<div class="pagewrapper">
    <div class="container">
    <h1>New Post</h1>
    <%=form_for @post, multipart:true do |f| %>
            <% if @post.errors.any?%>
            <div id="errors">
                <h2><%=pluralize(@post.errors.count, "error")%> prevented this post from saving </h2>
            </div>
            <ul>
                <% @post.errors.full_messages.each do |msg|%>
                <li><%=msg %></li>
                <% end %>
            </ul>
            <% end %>
    <p>
        <%=f.label :title %><br>
        <%=f.text_field :title %>
    </p>
    
    <p>
        <%=f.label :content%><br>
        <%=f.text_area :content%>
    </p>
    <p>
        <%=f.file_field :image%>
    </p>
    
    <p>
        <%=f.submit %>
    </p>
        <% end %>
    </div>
</div>

<%=render 'footer'%>

</html>